<?xml version="1.0"?>
<robot name = "desherbor_ensta" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find desherbor_ensta)/urdf/robot_desherbor.wheels.xacro"/>

  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <mass value="${mass}" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </xacro:macro>

  <link name="base_link"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
  </joint>

  <link name="chassis">
    <collision>
      <origin xyz="0 0 .1" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 .1" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="2.0"/>
  </link>

  <link name="left_top_wheel">
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="0.3"/>
  </link>

  <link name="right_top_wheel">
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="0.3"/>
  </link>

  <link name="left_bottom_wheel">
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="0.3"/>
  </link>

  <link name="right_bottom_wheel">
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="0.3"/>
  </link>

  <joint type="continuous" name="left_top_wheel_hinge">
    <origin xyz="0.1 0.13 0.1" rpy="0 0 0"/>
    <child link="left_top_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint type="continuous" name="right_top_wheel_hinge">
    <origin xyz="0.1 -0.13 0.1" rpy="0 0 0"/>
    <child link="right_top_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint type="continuous" name="left_bottom_wheel_hinge">
    <origin xyz="-0.1 0.13 0.1" rpy="0 0 0"/>
    <child link="left_bottom_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint type="continuous" name="right_bottom_wheel_hinge">
    <origin xyz="-0.1 -0.13 0.1" rpy="0 0 0"/>
    <child link="right_bottom_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="arm">
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.05" length="0.3"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <xacro:default_inertial mass="0.2"/>
  </link>

  <joint type="continuous" name="arm_hinge">
    <origin xyz="1.15 1.15 0.1" rpy="0 0 0"/>
    <child link="arm"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
